<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Covid19 Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        
            a .my-class

        {
            color: #333333
        }

        a.my-class:active {
            color: #666666
        }

        a.my-class:link {
            color: #999999
        }

        a.my-class:visited {
            color: #CCCCCC
        }
        
    </style>
</head>
<body>

    @if (Convert.ToString(Session["UserType"]) == "Guest")
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Covid19", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", title = "Click here to Home" })
                </div>
                <div style="text-align:right;padding-top:10px;">@Html.ActionLink("Login", "../Users/Login", "Users", new { @class = "my-class", title = "Click here to Login" })</div>
            </div>
        </div>
    }
    @if (Convert.ToString(Session["UserType"]) == "Admin")
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Covid19", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                        <li>@Html.ActionLink("URL", "Index", "URL")</li>
                        <li>@Html.ActionLink("Video", "Index", "Video")</li>
                        <li>@Html.ActionLink("Treatment", "Index", "Treatment")</li>
                        <li>@Html.ActionLink("Notification", "Index", "Notification")</li>
                        <li>@Html.ActionLink("Advice", "Index", "Advice")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    <div style="text-align:right;padding-top:10px;">@Html.ActionLink("Logout", "../Users/Logout", "Users", new { @class = "my-class", title = "Click here to Logout" })</div>
                </div>
                
            </div>
        </div>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Covid19 Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
